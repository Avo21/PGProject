{
 "name": "PGProject",
 "version": "0.2",
 "version_name": "pre-alpha",
 "description": "PGP in Gmail straight from your browser! PGProject allows you to encrypt and sign your mails.",

 "manifest_version": 2,

  "content_scripts": [
	  {
	  	"matches": ["https://mail.google.com/mail/*"],
	  	"js": [
			"pgproject.js",
			"html.js",
			"pgp.js"]
	  }
  ],

 "permissions": [
    "tabs"
 ],

  "web_accessible_resources": [
    "images/*.png"
  ]

}
