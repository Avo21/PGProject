{
 "name": "PGProject",
 "version": "0.3",
 "version_name": "pre-alpha",
 "description": "PGP in Gmail straight from your browser! PGProject allows you to encrypt and sign your mails.",

 "manifest_version": 2,

  "content_scripts": [
	  {
	  	"matches": ["https://mail.google.com/mail/*"],
	  	"js": ["contentscript/contentScript.js"]
	  }
  ],

 "permissions": [
    "tabs"
 ],

  "web_accessible_resources": [
    "images/*.png",
    "options/options.html"
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": [
      "background/eventPage.js",
      "background/pgproject.js",
      "openpgp/openpgp.js"],
    "persistent": false
  }

}
